package org.example;
import java.net.SocketImpl;
public class Main {
    public static void main(String[] args) {
        Figures circle = new Circle ("blue","red",5);
        Figures rectangle = new Rectangle("black","yellow",10,5,10,5 );
        Figures triangle = new Triangle("pink", "purple",10,10,10);
        System.out.println(circle.calculateRadius());
        System.out.println(triangle.calculateArea());
        System.out.println(rectangle.calculateArea());
        System.out.println(triangle.calculatePerimeter());
        System.out.println(rectangle.calculatePerimeter());

    }
}
package org.example;

public abstract class Figures {
String backgroundcolor;
String linecolor;
double perimeter;
double area;

 public Figures(String backgroundcolor, String linecolor, double perimeter, double area) {
     this.backgroundcolor = backgroundcolor;
     this.linecolor = linecolor;
     this.perimeter = perimeter;
     this.area = area;
    }

    public abstract double calculateArea();
    public abstract double calculatePerimeter();
    public abstract double calculateRadius();

}
package org.example;

public class Circle extends Figures {
    public Circle(String backgroundcolor, String linecolor, double radius){

    super(backgroundcolor,linecolor, radius);
}
    @Override
    public String toString() {
        return "Circle{" +
                "backgroundcolor='" + backgroundcolor + '\'' +
                '}';
    }

    @Override
    public String toString() {
        return "Circle{" +
                "linecolor='" + linecolor + '\'' +
                '}';
    }

    @Override
    public String toString() {
        return "Circle{" +
                "radius=" + radius +
                '}';
    }
}
package org.example;

public class Triangle extends Figures{
    public Triangle(String backgroundcolor, String linecolor,double side1, double side2,double side3) {
        super(backgroundcolor, linecolor,side1, side2,side3);

    }

    @Override
    public String toString() {
        return "Triangle{" +
                "backgroundcolor='" + backgroundcolor + '\'' +
                '}';
    }

    @Override
    public String toString() {
        return "Triangle{" +
                "linecolor='" + linecolor + '\'' +
                '}';
    }

    @Override
    public String toString() {
        return "Triangle{" +
                "perimeter=" + perimeter +
                '}';
    }

    @Override
    public String toString() {
        return "Triangle{" +
                "area=" + area +
                '}';
    }
}
package org.example;

public class Rectangle extends Figures{
    public Rectangle(String backgroundcolor, String linecolor,double side1, double side2,double side3, double side4) {
        super(backgroundcolor, linecolor, side1, side2, side3, side4);
    }

    @Override
    public String toString() {
        return "Rectangle{" +
                "backgroundcolor='" + backgroundcolor + '\'' +
                '}';
    }

    @Override
    public String toString() {
        return "Rectangle{" +
                "linecolor='" + linecolor + '\'' +
                '}';
    }

    @Override
    public String toString() {
        return "Rectangle{" +
                "perimeter=" + perimeter +
                '}';
    }

    @Override
    public String toString() {
        return "Rectangle{" +
                "area=" + area +
                '}';
    }
}
